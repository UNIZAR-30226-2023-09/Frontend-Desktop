<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="BancoController">
   <children>
      <Label alignment="CENTER" prefHeight="50.0" prefWidth="500.0" style="-fx-background-color: #ebe122; -fx-background-radius: 8PX;" text="Banco" textFill="WHITE">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
         <VBox.margin>
            <Insets top="50.0" />
         </VBox.margin>
      </Label>
      <ImageView fx:id="imgBanco" fitHeight="300.0" fitWidth="378.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@ruleta/bank.png" />
         </image>
         <VBox.margin>
            <Insets top="70.0" />
         </VBox.margin>
      </ImageView>
      <Label fx:id="lblText" text="¿Cuánto dinero quieres ingresar?">
         <font>
            <Font size="30.0" />
         </font>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Label>
      <VBox alignment="CENTER">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <TextField fx:id="txtBanco" prefHeight="50.0" />
                  <Label text="\$">
                     <font>
                        <Font size="35.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </Label>
               </children>
               <padding>
                  <Insets left="28.0" />
               </padding>
            </HBox>
            <Label fx:id="lblError" text="Error" textFill="RED">
