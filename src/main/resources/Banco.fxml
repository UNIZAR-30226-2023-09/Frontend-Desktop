                  <Button fx:id="btnIngresar" mnemonicParsing="false" onAction="#actionEvent" prefHeight="30.0" prefWidth="130.0" text="Ingresar dinero">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnRetirar" mnemonicParsing="false" onAction="#actionEvent" prefHeight="30.0" prefWidth="130.0" text="Retirar dinero">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </HBox>
         </children>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </VBox>
      <HBox alignment="CENTER" spacing="30.0">
         <children>
            <Button fx:id="btnConfirmar" mnemonicParsing="false" onAction="#actionEvent" prefHeight="30.0" prefWidth="130.0" text="Confirmar">
               <font>
                  <Font size="12.0" />
               </font>
            </Button>
            <Button fx:id="btnRechazar" mnemonicParsing="false" onAction="#actionEvent" prefHeight="30.0" prefWidth="130.0" text="Rechazar">
               <font>
                  <Font size="12.0" />
               </font>
            </Button>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets top="30.0" />
         </padding>
      </HBox>
   </children>
